#include <iostream>
using namespace std;

int main() {
    setlocale(0, "");
    int n;
    cin >> n;

    int min, count;
    cin >> min;
    count = 1;

    for (int i = 1; i < n; i++) {
        int num;
        std::cin >> num;

        if (num < min) {
            min = num;
            count = 1;
        }
        else if (num == min) {
            count++;
        }
    }

    cout << "Минимальное число: " << min << std::endl;
    cout << "Количество повторений: " << count << std::endl;

    return 0;
}
