#include <iostream>

using namespace std;

int main()
{
	setlocale(0, "");

	const int ARRSIZE = 8;

	int arr[ARRSIZE] = {3, 1, 2, 2, 4, 6, 8, 7};

	cout << "Размер массива: " << ARRSIZE << endl;

	int sum = 0;

	for (int i = 0; i < ARRSIZE; i++)
	{
		cout << "Число " << arr[i] << " является " << i + 1 << " элементом в массиве" << endl;

		if (arr[i] % 3 == 0)
		{
			sum += arr[i];
		}
	}

	cout << "Суммой всех чисел кратных 3 будет: " << sum;
}
