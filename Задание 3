#include <iostream>
using namespace std;

int main() {
	setlocale(0, "");
	int n;
	int sum = 0;
	cout << "Введите количество чисел в массиве: ";
	cin >> n;

	int arr[n];
	
	cout << "Введите элементы массива: ";
	for (int i = 0; i < n; i++) 
	{
		cin >> arr[i];
	}

	cout << "Содержимое масситва: ";
	for (int i = 0; i < n; i++)
	{
		if (arr[i] % 3 == 0)
		{
			sum += arr[i];
		}

		else {}
	}
	return 0;
}
